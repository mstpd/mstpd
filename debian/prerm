#!/bin/sh
# prerm script for mstpd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|deconfigure)
        pid_file=/var/run/mstpd.pid
        pid=
        if [ -f "$pid_file" ]; then
            read line < "$pid_file"
            for p in $line; do
                if echo $p | grep -q -E "[0-9]\b"; then
                    # Make sure a process with this PID is running, that its command
                    # line contains 'mstpd', and that it is not the grep command we
                    # are using to look for the 'mstpd' string.
                    if ps -o command -ww "$pid" | grep -v grep | grep 'mstpd' >/dev/null 2>&1; then
                        pid="$pid $p"
                    fi
                fi
            done
        fi
        if [ -n "$pid" ]; then
            kill $pid
        fi
    ;;

    failed-upgrade)
    ;;

    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
